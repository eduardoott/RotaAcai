<div class="col-lg-8 col-centered">
  <p id="notice"><%= notice %></p>

  <legend>Copos</legend>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Image url</th>
        <th>Price</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @cups.each do |cup| %>
        <tr>
          <td><%= cup.name %></td>
          <td><%= cup.image_url %></td>
          <td><%= cup.price %></td>
          <td><%= link_to 'Show', cup %></td>
          <td><%= link_to 'Edit', edit_cup_path(cup) %></td>
          <td><%= link_to 'Destroy', cup, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Cup', new_cup_path %>

</div>