<div class="col-lg-8 col-centered">
  <p id="notice"><%= notice %></p>

  <legend>Pedidos</legend>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Cliente</th>
        <th>Valor Total</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.customer %></td>
          <td><%= order.amount %></td>
          <td><%= link_to 'Mostrar', order %></td>
          <td><%= link_to 'Editar', edit_order_path(order) %></td>
          <td><%= link_to 'Excluir', order, method: :delete, data: { confirm: 'Tem certeza que deseja excluir?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Novo Pedido', new_order_path, :class => "btn btn-success" %>
</div>